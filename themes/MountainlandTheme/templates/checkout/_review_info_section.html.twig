<article class="card">
    <h3>{{ title }}</h3>
    <div class="review-info-grid">
        {% for item in info_items %}
            <div class="review-info-item">
                <span class="review-label">{{ item.label }}:</span>
                {% if isDataBound %}
                    <span id="{{ item.id|default('') }}" data-source="{{ item.source }}" data-type="{{ item.type|default('input') }}"></span>
                {% else %}
                    <span id="{{ item.id|default('') }}">{{ item.value }}</span>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</article>
