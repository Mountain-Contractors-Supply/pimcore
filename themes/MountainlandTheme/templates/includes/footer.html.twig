{# Shared footer template for Mountainland #}
<style>
    .site-footer {
        background-color: var(--primary-color);
        color: white;
        padding: 3rem 2rem 2rem 2rem;
        margin-top: auto;
        position: relative;
    }
    .footer-header {
        text-align: center;
        margin-bottom: 3rem;
    }
    .footer-header h2 {
        font-family: var(--secondary-font);
        font-size: 2.5rem;
        color: white;
        margin: 0;
        text-transform: uppercase;
    }
    .footer-content {
        max-width: 1600px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 3rem;
        margin-bottom: 2rem;
    }
    .footer-column {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .footer-column h3 {
        font-family: var(--secondary-font);
        font-size: 1.3rem;
        color: white;
        margin: 0 0 0.5rem 0;
        text-transform: uppercase;
    }
    .footer-column p {
        margin: 0.25rem 0;
        font-size: 0.95rem;
        line-height: 1.6;
    }
    .footer-column ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .footer-column ul li {
        margin-bottom: 0.5rem;
    }
    .footer-column a {
        color: white;
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.3s ease;
    }
    .footer-column a:hover {
        color: var(--secondary-color);
    }
    .location-link {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: white;
        transition: color 0.3s ease;
    }
    .location-link img {
        width: 60px;
        height: auto;
    }
    .location-link:hover {
        color: var(--secondary-color);
    }
    .hours-info {
        margin-top: 1rem;
    }
    .social-media {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }
    .social-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        color: var(--primary-color);
        font-weight: bold;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    .social-icon:hover {
        background-color: var(--secondary-color);
        transform: scale(1.1);
    }
    .footer-bottom {
        display: flex;
        justify-content: flex-end;
        padding-top: 2rem;
    }
    .footer-logo {
        width: 200px;
        height: auto;
    }
    @media (max-width: 1024px) {
        .footer-content {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
    }
    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-header h2 {
            font-size: 2rem;
        }
    }
</style>

