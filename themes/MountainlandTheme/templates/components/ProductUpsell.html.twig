<section class="mt-12 bg-gray-100">
    <div class="mcs-primary-bg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <h3 class="text-2xl font-bold text-white">{{ title|default('You May Also Need...') }}</h3>
            <img class="h-8" src="{{ asset('var/assets/images/branding/supplier/logos/mountainland-corporate-logo-white.webp') }}" alt="Mountainland" />
        </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6" data-controller="carousel">
        <div class="relative">
            <button class="absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white rounded-full shadow-lg hover:bg-gray-100 flex items-center justify-center text-gray-600" aria-label="Previous product" data-action="click->carousel#prev">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            
            <div class="overflow-hidden px-12">
                <div class="flex gap-4" data-carousel-target="track">
                {% if products is defined and products|length > 0 %}
                    {% for item in products %}
                        <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                            <img src="{{ asset(item.image|default('var/assets/images/misc/camera.webp')) }}" alt="{{ item.name }}" class="w-full aspect-square object-cover rounded mb-3" />
                            <div class="font-medium text-gray-900 text-sm mb-1">{{ item.name }}</div>
                            <div class="mcs-primary-text font-bold">${{ item.price|number_format(2, '.', ',') }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Companion Item" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Companion Item A</div>
                        <div class="mcs-primary-text font-bold">$149.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Accessory" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Accessory Item B</div>
                        <div class="mcs-primary-text font-bold">$79.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Service" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Service Option C</div>
                        <div class="mcs-primary-text font-bold">$199.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Part" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Replacement Part D</div>
                        <div class="mcs-primary-text font-bold">$49.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Tool" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Professional Tool E</div>
                        <div class="mcs-primary-text font-bold">$299.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Kit" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Installation Kit F</div>
                        <div class="mcs-primary-text font-bold">$129.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Supplies" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Supply Pack G</div>
                        <div class="mcs-primary-text font-bold">$89.99</div>
                    </div>
                    <div class="bg-white rounded-lg p-4 shadow hover:shadow-lg transition flex-shrink-0 basis-1/2 md:basis-1/4">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Hardware" class="w-full aspect-square object-cover rounded mb-3" />
                        <div class="font-medium text-gray-900 text-sm mb-1">Hardware Set H</div>
                        <div class="mcs-primary-text font-bold">$39.99</div>
                    </div>
                {% endif %}
                </div>
            </div>
            
            <button class="absolute -right-12 top-1/2 -translate-y-1/2 z-10 w-10 h-10 bg-white rounded-full shadow-lg hover:bg-gray-100 flex items-center justify-center text-gray-600" aria-label="Next product" data-action="click->carousel#next">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>
    </div>
</section>
