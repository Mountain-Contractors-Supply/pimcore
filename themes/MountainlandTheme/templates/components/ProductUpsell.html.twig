<section class="info-panel upsell">
    <div class="info-banner">
        <div class="info-banner-content">
            <h3 class="info-title">{{ title|default('You May Also Need...') }}</h3>
            <img class="info-logo" src="{{ asset('var/assets/images/branding/supplier/logos/mountainland-corporate-logo-white.webp') }}" alt="Mountainland" />
        </div>
    </div>
    <div class="info-content">
        <div class="products-carousel">
            <button class="carousel-arrow carousel-arrow-left" aria-label="Previous product">&lt;</button>
            
            <div class="carousel-products">
                {% if products is defined and products|length > 0 %}
                    {% for item in products %}
                        <div class="carousel-product">
                            <img src="{{ asset(item.image|default('var/assets/images/misc/camera.webp')) }}" alt="{{ item.name }}" class="carousel-product-image" />
                            <div class="carousel-product-name">{{ item.name }}</div>
                            <div class="carousel-product-price">${{ item.price|number_format(2, '.', ',') }}</div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="carousel-product">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Companion Item" class="carousel-product-image" />
                        <div class="carousel-product-name">Companion Item A</div>
                        <div class="carousel-product-price">$149.99</div>
                    </div>
                    <div class="carousel-product">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Accessory" class="carousel-product-image" />
                        <div class="carousel-product-name">Accessory Item B</div>
                        <div class="carousel-product-price">$79.99</div>
                    </div>
                    <div class="carousel-product">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Service" class="carousel-product-image" />
                        <div class="carousel-product-name">Service Option C</div>
                        <div class="carousel-product-price">$199.99</div>
                    </div>
                    <div class="carousel-product">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Part" class="carousel-product-image" />
                        <div class="carousel-product-name">Replacement Part D</div>
                        <div class="carousel-product-price">$49.99</div>
                    </div>
                {% endif %}
            </div>
            
            <button class="carousel-arrow carousel-arrow-right" aria-label="Next product">&gt;</button>
        </div>
    </div>
</section>
