<div class="flex flex-col items-center space-y-4">
    <div class="aspect-square w-full bg-gray-100 rounded-lg overflow-hidden shadow-md">
        <img src="{{ asset(mainImage|default('var/assets/images/misc/camera.webp')) }}" alt="{{ productName|default('Product') }}" class="w-full h-full object-contain p-4" />
    </div>
    <div class="w-full grid grid-cols-3 gap-3">
        {% if thumbnails is defined and thumbnails|length > 0 %}
            {% for thumbnail in thumbnails %}
                <div class="aspect-square bg-gray-100 rounded border-2 border-gray-200 hover:mcs-primary-border cursor-pointer transition overflow-hidden">
                    <img src="{{ asset(thumbnail) }}" alt="Thumbnail {{ loop.index }}" class="w-full h-full object-contain p-1" />
                </div>
            {% endfor %}
        {% else %}
            {% for i in 1..5 %}
                <div class="aspect-square bg-gray-100 rounded border-2 border-gray-200 hover:mcs-primary-border cursor-pointer transition overflow-hidden">
                    <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Thumbnail {{ i }}" class="w-full h-full object-contain p-1" />
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
