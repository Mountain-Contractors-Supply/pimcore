<div class="space-y-2 mt-6">
    <details class="group border border-gray-200 rounded-lg" open>
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Product Highlights</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <ul class="px-4 py-3 space-y-2 text-gray-600 text-sm list-disc list-inside">
            {% if highlights is defined and highlights|length > 0 %}
                {% for highlight in highlights %}
                    <li>{{ highlight }}</li>
                {% endfor %}
            {% else %}
                <li>Highlight one goes here as placeholder copy.</li>
                <li>Highlight two with a short description.</li>
                <li>Highlight three about specs or materials.</li>
            {% endif %}
        </ul>
    </details>
    <details class="group border border-gray-200 rounded-lg">
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Description</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <div class="px-4 py-3 text-gray-600 text-sm">
            <p>{{ description|default('Product description will appear here.') }}</p>
        </div>
    </details>
    <details class="group border border-gray-200 rounded-lg">
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Specs</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <div class="px-4 py-3 text-gray-600 text-sm">
            <p>{{ specs|default('Product specifications will appear here.') }}</p>
        </div>
    </details>
    <details class="group border border-gray-200 rounded-lg">
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Videos</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <div class="px-4 py-3 text-gray-600 text-sm">
            <p>{{ videos|default('Installation and product videos will appear here.') }}</p>
        </div>
    </details>
    <details class="group border border-gray-200 rounded-lg">
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Contact</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <div class="px-4 py-3 grid grid-cols-1 md:grid-cols-3 gap-4">
            {% if contacts is defined and contacts|length > 0 %}
                {% for contact in contacts %}
                    <div class="flex items-start gap-3">
                        <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="{{ contact.name }}" class="w-12 h-12 rounded-full bg-gray-100" />
                        <div class="text-sm">
                            <div class="font-semibold text-gray-900">{{ contact.name }}</div>
                            <div class="text-gray-600">{{ contact.email }}</div>
                            <div class="text-gray-600">{{ contact.phone }}</div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="flex items-start gap-3">
                    <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Contact" class="w-12 h-12 rounded-full bg-gray-100" />
                    <div class="text-sm">
                        <div class="font-semibold text-gray-900">John Smith</div>
                        <div class="text-gray-600">jsmith@example.com</div>
                        <div class="text-gray-600">800-555-1234</div>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Contact" class="w-12 h-12 rounded-full bg-gray-100" />
                    <div class="text-sm">
                        <div class="font-semibold text-gray-900">Contact Us</div>
                        <div class="text-gray-600">info@example.com</div>
                        <div class="text-gray-600">800-555-5678</div>
                    </div>
                </div>
                <div class="flex items-start gap-3">
                    <img src="{{ asset('var/assets/images/misc/camera.webp') }}" alt="Contact" class="w-12 h-12 rounded-full bg-gray-100" />
                    <div class="text-sm">
                        <div class="font-semibold text-gray-900">Español</div>
                        <div class="text-gray-600">espanol@example.com</div>
                        <div class="text-gray-600">800-555-9012</div>
                    </div>
                </div>
            {% endif %}
        </div>
    </details>
    <details class="group border border-gray-200 rounded-lg">
        <summary class="px-4 py-3 font-semibold text-gray-900 cursor-pointer hover:bg-gray-50 list-none flex justify-between items-center">
            <span>Shipping Policies</span>
            <span class="text-gray-400 group-open:rotate-180 transition-transform">▼</span>
        </summary>
        <div class="px-4 py-3 text-gray-600 text-sm">
            <p>{{ shippingPolicy|default('Ships in 2-3 business days. Free ground over $199. Freight items may incur LTL charges.') }}</p>
        </div>
    </details>
    <div class="mt-4 border border-gray-200 rounded-lg hover:shadow-md transition">
        <a href="/calculator" class="flex items-center gap-4 p-4" aria-label="Open calculator">
            <img src="{{ asset('var/assets/images/misc/calculator.webp') }}" alt="Calculator" class="w-12 h-12" />
            <div class="flex-1">
                <div class="font-semibold text-gray-900">Need Help Calculating?</div>
                <div class="text-sm text-blue-600">Use our online calculator</div>
            </div>
        </a>
    </div>
</div>
