{% set title = title|default('Shop By Category') %}
{% set initialCount = initialCount|default(8) %}
{% set controllerName = controllerName|default('toggle-grid') %}
{% set iconExtension = iconExtension|default('png') %}
{% set iconBasePath = iconBasePath|default('var/assets/images/product-types/icons/') %}
{% set useLink = useLink|default(true) %}

<section class="py-12" data-controller="{{ controllerName }}">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {% if title %}
            <div class="mb-8">
                <h2 class="text-3xl font-bold mcs-primary-text">{{ title }}</h2>
            </div>
        {% endif %}
        
        <div class="divisions-container">
            <div class="divisions-grid" data-toggle-grid-target="grid">
                {% for item in items %}
                    <twig:GridItem 
                        :item="item" 
                        :index="loop.index" 
                        :initialCount="initialCount"
                        :iconExtension="iconExtension"
                        :iconBasePath="iconBasePath"
                        :useLink="useLink"
                    />
                {% endfor %}
            </div>

            {% if items|length > initialCount %}
                {% include 'components/ViewMore.html.twig' with { controllerName: controllerName } %}
            {% endif %}
        </div>
    </div>
</section>
