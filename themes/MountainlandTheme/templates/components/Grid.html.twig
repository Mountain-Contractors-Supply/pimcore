{% set title = title|default('Shop By Category') %}
{% set iconExtension = iconExtension|default('png') %}
{% set iconBasePath = iconBasePath|default('var/assets/images/product-types/icons/') %}
{% set useLink = useLink|default(true) %}
{% set pagination = pagination|default(null) %}

<section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {% if title %}
            <div class="mb-8">
                <h2 class="text-3xl font-bold mcs-primary-text">{{ title }}</h2>
            </div>
        {% endif %}
        
        <div class="divisions-container">
            <div class="divisions-grid">
                {% for item in items %}
                    <twig:GridItem 
                        :item="item" 
                        :iconExtension="iconExtension"
                        :iconBasePath="iconBasePath"
                        :useLink="useLink"
                    />
                {% endfor %}
            </div>

            {% if pagination %}
                <div class="pagination-wrapper mt-12">
                    {{ knp_pagination_render(pagination, 'components/pagination.html.twig', {
                        'limit': app.request.query.get('limit', 10)
                    }) }}
                </div>
            {% endif %}
        </div>
    </div>
</section>
