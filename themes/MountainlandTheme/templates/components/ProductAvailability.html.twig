{% if app.user %}
    <div
        data-controller="symfony--ux-turbo--mercure-turbo-stream"
        data-symfony--ux-turbo--mercure-turbo-stream-hub-value="{{ app.request.schemeAndHttpHost ~ '/hub/.well-known/mercure' }}"
        data-symfony--ux-turbo--mercure-turbo-stream-topic-value="product-availability-{{ productId }}_{{ uom }}"
    ></div>
{% endif %}

<div
    class="availability-target-{{ productId }}_{{ uom }}"
    data-availability-loader-target="availability"
    data-id="{{ productId }}_{{ uom }}">
</div>
