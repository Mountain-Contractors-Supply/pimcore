{% set resolvedValue = value|default(1) %}
{% set resolvedMin = min|default(1) %}
{% set resolvedStep = step|default(1) %}
{% set resolvedName = name|default('quantity') %}

<div class="inline-flex items-center gap-2" data-controller="numeric-input">
    <button type="button" class="h-10 w-10 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50" data-action="click->numeric-input#decrease" aria-label="Decrease">âˆ’</button>
    <input
        type="number"
        class="w-20 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 mcs-primary-ring text-center"
        name="{{ resolvedName }}"
        {% if id is defined %}id="{{ id }}"{% endif %}
        value="{{ resolvedValue }}"
        min="{{ resolvedMin }}"
        step="{{ resolvedStep }}"
        {% if max is defined %}max="{{ max }}"{% endif %}
        data-numeric-input-target="input"
    />
    <button type="button" class="h-10 w-10 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50" data-action="click->numeric-input#increase" aria-label="Increase">+</button>
</div>
