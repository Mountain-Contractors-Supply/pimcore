{%- set iconExtension = iconExtension|default('png') -%}
{%- set iconBasePath = iconBasePath|default('var/assets/images/product-types/icons/') -%}
{%- set useLink = useLink|default(true) -%}

{%- if useLink -%}
    {%- set element = 'a' -%}
    {%- set attributes = 'href="' ~ path('pimcore_element', {'element': item}) ~ '" data-turbo-frame="_top"' -%}
{%- else -%}
    {%- set element = 'div' -%}
    {%- set attributes = '' -%}
{%- endif -%}

{%- set iconSlug = item.name|lower|trim|replace({' ': '-', '&': 'and', ',': '', '.': '', '/': '-'}) -%}
{%- set iconPath = iconBasePath ~ iconSlug ~ '-icon.' ~ iconExtension -%}

<{{ element }} 
    {% if useLink %}href="{{ path('pimcore_element', {'element': item}) }}" data-turbo-frame="_top"{% endif %}
    class="division-box group block bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg hover:border-blue-200 transition-all duration-200">
    <div class="p-6 flex flex-col items-center text-center h-full">
        {% if item.imageRef %}
            <img src="{{ item.imageRef.path }}" 
                 alt="{{ item.name }}" 
                 class="h-24 w-24 object-contain mb-4 group-hover:scale-110 transition-transform duration-200">
        {% else %}
            <img src="{{ asset(iconPath) }}" 
                 alt="{{ item.name }}" 
                 class="h-24 w-24 object-contain mb-4 group-hover:scale-110 transition-transform duration-200"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
            <div class="h-24 w-24 bg-gray-100 rounded-lg mb-4 items-center justify-center" style="display:none;">
                <svg class="h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
        {% endif %}
        <p class="text-sm font-semibold text-gray-900 group-hover:text-blue-600">{{ item.name }}</p>
    </div>
</{{ element }}>
