<div class="space-y-3 py-4 border-y border-gray-200">
    <div class="flex justify-between text-sm">
        <span class="text-gray-600">Item #:</span>
        <span class="font-medium text-gray-900">{{ productId ?? '—' }}</span>
    </div>
    <div class="flex justify-between text-sm">
        <span class="text-gray-600">UPC:</span>
        <span class="font-medium text-gray-900">{{ upc ?? '—' }}</span>
    </div>
    <div class="flex justify-between items-center text-sm">
        <span class="text-gray-600">Home:</span>
        <span class="flex items-center gap-2">
            {% if stockHome is not null %}
                {% if stockHome > 0 %}
                    <img src="{{ asset('var/assets/images/misc/green-check.webp') }}" alt="In stock" class="w-4 h-4" />
                    <span class="text-green-600 font-medium">{{ stockHome }} Available</span>
                {% else %}
                    <img src="{{ asset('var/assets/images/misc/out-of-stock.webp') }}" alt="Out of stock" class="w-4 h-4" />
                    <span class="text-red-600 font-medium">Out of Stock</span>
                {% endif %}
            {% else %}
                <span class="text-gray-500">—</span>
            {% endif %}
        </span>
    </div>
    <div class="flex justify-between items-center text-sm">
        <span class="text-gray-600">Other:</span>
        <span class="flex items-center gap-2">
            {% if stockOther is not null %}
                {% if stockOther > 0 %}
                    <img src="{{ asset('var/assets/images/misc/green-check.webp') }}" alt="In stock" class="w-4 h-4" />
                    <span class="text-green-600 font-medium">{{ stockOther }} Available</span>
                {% else %}
                    <img src="{{ asset('var/assets/images/misc/out-of-stock.webp') }}" alt="Out of stock" class="w-4 h-4" />
                    <span class="text-red-600 font-medium">Out of Stock</span>
                {% endif %}
            {% else %}
                <span class="text-gray-500">—</span>
            {% endif %}
        </span>
    </div>
</div>

<div class="text-3xl font-bold text-gray-900 my-4">
    {% if price is not null %}
        {{ price }}
    {% else %}
        —
    {% endif %}
</div>
