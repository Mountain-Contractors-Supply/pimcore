<div {{ attributes.defaults({class: 'space-y-3 py-4 border-y border-gray-200'}) }}>
    <div class="flex justify-between text-sm">
        <span class="text-gray-600">Item #:</span>
        <span class="font-medium text-gray-900">{{ productId ?? 'ITEM-123456' }}</span>
    </div>
    <div class="flex justify-between text-sm">
        <span class="text-gray-600">UPC:</span>
        <span class="font-medium text-gray-900">{{ upc ?? 'UPC-9876543210' }}</span>
    </div>
    <div class="flex justify-between items-center text-sm">
        <span class="text-gray-600">Availability:</span>
        <span class="flex items-center gap-2">
            <span class="text-green-600 font-medium">{{ stock }}</span>
        </span>
    </div>
</div>

<div class="text-3xl font-bold text-gray-900 my-4">{{ price ?? '$999.99' }}</div>
